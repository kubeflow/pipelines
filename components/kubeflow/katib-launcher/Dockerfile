FROM python:3.6

ENV APP_HOME /app
WORKDIR ${APP_HOME}

ADD . ${APP_HOME}
RUN pip install --no-cache-dir -r requirements.txt

ENTRYPOINT ["python", "src/launch_experiment.py"]
