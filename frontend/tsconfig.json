{
  "compilerOptions": {
    "baseUrl": "./",
    "experimentalDecorators": true,
    "lib": [ "es2017", "es6", "es5", "dom" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "./dist/",
    "strict": true,
    "strictNullChecks": true,
    "target": "es2015"
  },
  "include": [
    "./src"
  ]
}
