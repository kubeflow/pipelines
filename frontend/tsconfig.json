{
  "compilerOptions": {
    "baseUrl": "./",
    "experimentalDecorators": true,
    "lib": [ "es2017", "es6", "es5", "dom", "dom.iterable" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "./dist/",
    "paths": {
      "*": [
        "*",
        "bower_components/*",
        "node_modules/*"
      ]
    },
    "strict": true,
    "strictNullChecks": true,
    "target": "es2015"
  },
  "include": [
    "./src/**/*",
    "./bower_components/**/*.d.ts"
  ],
  "exclude": [
    "./src/api/*"
  ]
}
