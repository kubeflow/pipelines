{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2020"
    ],
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "__mocks__",
    "acceptance-tests",
    "analyze_bundle.js",
    "build",
    "coverage",
    "gen_licenses.js",
    "jest",
    "mock-backend",
    "node_modules",
    "proto",
    "scripts",
    "server",
    "src/apis",
    "src/generated",
    "src/setupTests.ts",
    "webpack",
    "**/?*test.*",
  ],
  "include": [
    "src",
    "stories"
  ]
}