{
  "name": "pipelines-frontend-test",
  "version": "0.0.1",
  "description": "Test package for ML Pipeline Management frontend",
  "dependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^5.0.1",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "sinon": "^6.1.5",
    "ts-loader": "4.4.2",
    "ts-node": "^7.0.1",
    "typescript": "3.0.1",
    "wait-on": "^2.1.0",
    "wdio-dot-reporter": "0.0.10",
    "wdio-mocha-framework": "^0.6.2",
    "wdio-selenium-standalone-service": "0.0.10",
    "wdio-visual-regression-service": "^0.9.0",
    "wdio-webcomponents": "^1.1.0",
    "webdrivercss": "^1.1.10",
    "webdriverio": "^4.12.0"
  },
  "scripts": {
    "component-tests": "wdio components/wdio.conf.js",
    "visual-regression-tests": "wdio ui/wdio.conf.js --suite visualRegression",
    "mock-e2e-tests": "HEADLESS_UI_TESTS=1 wdio ui/wdio.conf.js --suite mockEndToEnd",
    "unit-tests": "mocha -r ts-node/register unit/*.ts",
    "test": "npm run unit-tests & HEADLESS_UI_TESTS=1 npm run visual-regression-tests && HEADLESS_UI_TESTS=1 npm run mock-e2e-tests"
  }
}
